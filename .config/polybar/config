[colors]
;background = ${xrdb:color0:#222}
background = #191a21
background-alt = #282a36
;foreground = ${xrdb:color7:#222}
foreground = #E6E6E6
foreground-alt = #6272a4

red = #FF5555
purple = #BD93F9
green = #50FA7B
yellow = #F1FA8C
blue = #8BE9FD
magenta = #FF79C6

[bar/owbar]
bottom = true
monitor = ${env:MONITOR:}
width = 100%
height = 38
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = JetBrainsMono Nerd Font Mono:size=12:dpi=120:antialias=true:autohint=true;2
font-1 = JetBrainsMono Nerd Font Mono:size=18:dpi=120:antialias=true:autohint=true;5
font-2 = JetBrainsMono Nerd Font Mono:size=22:dpi=120:antialias=true:autohint=true;5

modules-left = bspwm  _  updates-pacman-aurhelper  _  pulseaudio  _  maim  _  run  _  ranger 
modules-center = xwindow
modules-right =  memory  _  cpu  _  date 

tray-position = right
tray-padding = 0
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize

[module/]
type = custom/text
content = ""
content-foreground = ${colors.background-alt}
content-font = 2

[module/]
type = custom/text
content = ""
content-foreground = ${colors.background-alt}
content-font = 2

[module/_]
type = custom/text
content = " "

[module/updates-pacman-aurhelper]
type = custom/script
exec = ~/.config/polybar/scripts/updates-pacman-aurhelper.sh
click-left = $TERMINAL -e sudo pacman -Syu
click-right = ~/.config/polybar/scripts/updates-pacman-aurhelper.sh
interval = 600
format-prefix = ""
format-prefix-font = 3
format-prefix-foreground = ${colors.blue}
format-background = ${colors.background-alt}

[module/run]
type = custom/text
content = " run"
content-background = ${colors.background-alt}
content-prefix = ""
content-prefix-foreground = ${colors.blue}
content-prefix-background = ${colors.background-alt}
content-prefix-font = 2
click-left = rofi -show drun
click-right = rofi -show run

[module/maim]
type = custom/text
content = " maim"
content-background = ${colors.background-alt}
content-prefix = ""
content-prefix-foreground = ${colors.blue}
content-prefix-background = ${colors.background-alt}
content-prefix-font = 2
click-left = rofi-maim.sh
click-right = $TERMINAL -e nvim ~/.local/bin/rofi-maim.sh

[module/sys]
type = custom/text
content = " sys"
