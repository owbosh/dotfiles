content-prefix = ""
content-prefix-foreground = ${colors.blue}
content-prefix-background = ${colors.background-alt}
content-prefix-font = 2
click-left = rofi-csv2menu.sh sys

[module/ranger]
type = custom/text
content = " ranger"
content-background = ${colors.background-alt}
content-prefix = ""
content-prefix-foreground = ${colors.blue}
content-prefix-background = ${colors.background-alt}
content-prefix-font = 2
click-left = $TERMINAL -e ranger
click-right = $TERMINAL -e ranger ~/img/anime


[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
format-foreground = ${colors.blue}

[module/bspwm]
type = internal/bspwm

label-focused-background = ${colors.background-alt}
label-occupied-background = ${colors.background-alt}
label-empty-background = ${colors.background-alt}
label-urgent-background = ${colors.background-alt}

label-focused-underline = ${colors.blue}
label-occupied-underline = ${colors.background}
label-empty-underline = ${colors.background}
label-urgent-underline = ${colors.red}

label-focused-foreground = ${colors.blue}
label-occupied-foreground = ${colors.foreground}
label-empty-foreground = ${colors.foreground-alt}
label-urgent-foreground = ${colors.red}

label-focused = %index%
label-occupied = %index%
label-empty = %index%
label-urgent = %index%

label-focused-padding = 1
label-occupied-padding = 1
label-empty-padding = 1
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = ""
format-prefix-font = 2
format-prefix-foreground = ${colors.purple}
label = %percentage:2%%
format-background = ${colors.background-alt}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-font = 2
format-prefix-foreground = ${colors.purple}
label = %percentage_used%%
format-background = ${colors.background-alt}

[module/date]
type = internal/date
interval = 60
date-alt = " %d/%m/%Y"
time = %I:%M%P
time-alt = %H:%M:%S
format-prefix = ""
format-prefix-font = 2
format-prefix-foreground = ${colors.green}
label = %date% %time%
format-background = ${colors.background-alt}

[module/pulseaudio]
type = internal/pulseaudio

label-volume = %percentage%%
format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.blue}
format-volume-font = 3
format-volume-background = ${colors.background-alt}

label-muted = muted
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.red}
format-muted-font = 3
format-muted-foreground = ${colors.foreground-alt}
format-muted-background = ${colors.background-alt}

[settings]
screenchange-reload = true
format-underline = ${colors.background}
